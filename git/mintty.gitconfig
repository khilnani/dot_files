[user]
    name = khilnani
    email = nik@khilnani.org
[core]
    editor = vi
[color]
    ui = true
[color "branch"]
    current = yellow
    local = green
    remote = cyan
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = red
[diff]
    tool = vimdiff
[difftool]
    prompt = true
[credential]
  helper = cache --timeout=3600
[push]
  default = simple
